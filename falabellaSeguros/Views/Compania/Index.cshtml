@model IEnumerable<falabellaSeguros.Models.compania>

@{
    ViewBag.Title = "Lista de Compañias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Compañias</h2>
@if (System.Web.HttpContext.Current.Session["NombreUsuario"] != null)
{
    <p>
        @Html.ActionLink("Crear Compañia", "Create")
    </p>
}
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.compania_Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.compania_Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.compania_Telefono)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.compania_Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.compania_Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.compania_Telefono)
                </td>
                @if (System.Web.HttpContext.Current.Session["NombreUsuario"] != null)
                {
                    <td>
                        @Html.ActionLink("Editar", "Edit", new {  id=item.compania_Id }) |
                        @Html.ActionLink("Detalle", "Details", new { id = item.compania_Id }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.compania_Id })
                    </td>
                }
            </tr>
        }

    </table>
